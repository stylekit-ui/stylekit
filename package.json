{
  "name": "stylekit",
  "description": "Stylekit is a CSS styling toolkit to facilitate the development of user interfaces.",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "dev": "sass stylekit.scss dist/stylekit.css --no-source-map --style expanded",
    "build": "sass stylekit.scss dist/stylekit.min.css --no-source-map --style compressed",
    "watch": "npm run dev & npm run dev -- --watch"
  },
  "devDependencies": {
    "sass": "^1.43.2"
  },
  "files": [
    "dist/*.{css}",
    "**/*.scss",
    "package.json",
    "README.md"
  ]
}
