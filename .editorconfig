# https://editorconfig.org
# This file is for unifying the coding style for different editors

# Stop the editor from looking for .editorconfig files in the
# parent directories
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = false

[{.*,*.md,*.mdx,*.json,*.toml,*.yml,}]
indent_style = space